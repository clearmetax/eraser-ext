{
  "manifest_version": 3,
  "name": "Twitter Unfollow All",
  "version": "1.0.0",
  "description": "Unfollow all accounts on Twitter/X with one click.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "js": ["unfollow.js"]
    }
  ]
}